<% unless notice.nil? %>
    <p id="notice" class="alert alert-dismissible alert-success"><%= notice %></p>
<% end %>
<script>
    $('#issues').addClass("active")
</script>

<h4 style="color: orange">Список нарушений</h4>

<%= link_to 'Новое нарушение', new_issue_path, :class => 'btn btn-success btn-sm' %>
<br>
<br>
<form class="form-inline" method="get">

    <div class="form-group" style="position: relative">
        <label>С</label>
        <input value="<%= (@from).strftime("%d.%m.%Y %H:%M") %>" class="form-control input date input-sm" type="text" id="from" name="from">
    </div>

    <div class="form-group" style="position: relative">
        <label>По</label>
        <input value="<%= (@to).strftime("%d.%m.%Y %H:%M") %>" class="form-control input date input-sm" type="text" id="to" name="to">
    </div>

    <input type="submit" value="Выбрать" class="btn btn-primary btn-sm">

</form>
<br>


<table class="table table-striped table-hover">
    <th>№</th>
    <th>Выявил</th>
    <th>Дата проверки</th>
    <th>Нарушитель</th>
    <th>Статус</th>
    <th>Нарушение</th>
    <th>Отвественный</th>
    <th>Дата</th>
    <th>Принятые оперативные меры</th>
    <th colspan="3">Действия</th>


    <tbody>
    <% @issues.each do |issue| %>
        <tr>
            <td><%= issue.id %></td>
            <td><%= issue.author.full_name %></td>
            <td><%= (issue.created_at).strftime('%d.%m.%Y') %></td>
            <td><%= issue.violator.full_name %></td>
            <td><%= issue.status.name %></td>
            <td><%= issue.issue_type.name %></td>
            <td><%= issue.assigned.full_name %></td>
            <td><%= (issue.due_date).strftime('%d.%m.%Y') %></td>
            <td><%= issue.note_measures %></td>
            <td>
                <%= link_to '', edit_issue_path(issue), {:class => 'btn glyphicon glyphicon-edit btn-primary  btn-sm '} %>
                <!--
                <%= link_to('Удалить', issue, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-danger btn-sm ') %>
                -->
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
<%= paginate @issues %>

<script>
    $(function () {
        $('.form-group #from').datetimepicker({
            locale: 'ru'
        });
        $('.form-group #to').datetimepicker({
            locale: 'ru'
        });
    });
</script>

<br>


