<%= form_for(@critical_type) do |f| %>
  <% if @critical_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@critical_type.errors.count, "ошибок") %> препятствуют сохранению:</h2>

      <ul>
      <% @critical_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
