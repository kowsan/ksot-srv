<%= form_for(@area) do |f| %>
  <% if @area.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@area.errors.count, "ошибок") %> препятствуют сохранению:</h2>

      <ul>
      <% @area.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="container-fluid ">

        <div class="form-group">
            <%= f.label 'Имя' %>
            <%= f.text_field(:name, {:class => 'form-control', :placeholder => 'наименование'}) %>
        </div>
        <div class="form-group">
            <%= f.label 'Короткое имя' %>
            <%= f.text_field(:short_name, {:class => 'form-control', :placeholder => 'краткое наименование'}) %>
        </div>
        <div class="form-group">
            <%= f.label 'Дирекция' %>
            <%= f.collection_select(:management_id,Management.all,:id,:name,{}, :class => 'form-control input', :placeholder => 'краткое наименование') %>
        </div>


        <div class="actions">
            <%= f.submit({:class => 'btn btn-primary btn-sm'}) %>
        </div>

    </div>

<% end %>
<script type="text/javascript">
    $('#areas').addClass('active');
</script>
