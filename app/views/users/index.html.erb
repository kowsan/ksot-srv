<p id="notice"><%= notice %></p>
<h1>Список пользователей</h1>

<%= link_to 'Новый пользователь', new_user_path, :class => 'btn btn-success btn-sm' %>
<br>
<br>

<table class="table table-striped table-hover">
    <th>Логин</th>
    <th>Фамилия</th>
    <th>Имя</th>
    <th>Отчество</th>
    <th>Активен?</th>
    <th>Должность</th>
    <th>Подразделение</th>
    <th>Роль</th>
    <th>Действия</th>


    <tbody>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.login %></td>
            <td><%= user.last_name %></td>
            <td><%= user.first_name %></td>
            <td><%= user.middle_name %></td>
            <td>
                <% if user.is_active %>
                    <span class="icon-off"></span>
                <% else %>
                    <span class="icon-ok"></span>
                <% end %>
            </td>
            <td><%= user.position %></td>
            <td><%= user.subdivision.name %></td>
            <td><%= user.staff_role.name %></td>
            <td><%= link_to 'Изменить', edit_user_path(user), {:class => 'btn btn-info btn-sm '} %><%= link_to 'Удалить', user, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn  btn-sm btn-danger' %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<br>

<script type="text/javascript">
    $('#users').addClass('active');
</script>
