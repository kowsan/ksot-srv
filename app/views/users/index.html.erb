<p id="notice"><%= notice %></p>
<br>
<%= link_to 'Новый пользователь', new_user_path, {:class => 'btn btn-default'} %>
<br>
<br>

<table border="0" class="table">

    <th>Фамилия</th>
    <th>Имя</th>
    <th>Отчество</th>
    <th>Активен?</th>
    <th>Должность</th>
    <th>Роль</th>
    <th>Действия</th>



    <tbody>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.last_name %></td>
            <td><%= user.first_name %></td>
            <td><%= user.middle_name %></td>
            <td><%= user.is_active %></td>
            <td><%= user.position %></td>
            <td><%= user.staff_role.name %></td>
            <td><%= link_to 'Изменить', edit_user_path(user), {:class => 'btn '} %><%= link_to 'Удалить', user, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn  btn-danger' %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<br>

<script type="text/javascript">
    $('#users').addClass('active');
</script>
