<p id="notice"><%= notice %></p>
<h4 style="color: orange">Список пользователей</h4>

<%= link_to 'Новый пользователь', new_user_path, :class => 'btn btn-success btn-sm' %>
<br>
<br>

<table class="table table-striped table-hover">
    <th>ID</th>
    <th>Имя</th>
    <th>Отчество</th>
    <th>Фамилия</th>
    <th>Логин</th>
    <th>Роль</th>
    <th>Должность</th>
    <th>Подразделение</th>
    <th>Активен?</th>

    <th>Действия</th>


    <tbody>
    <% @users.each do |user| %>
        <% begin %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.first_name %></td>
                <td><%= user.middle_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.login %></td>
                <td><%= user.staff_role.name %></td>
                <td><%= user.position %></td>
                <td><%= user.subdivision.name %></td>
                <td>
                    <% if user.is_active %>
                        <span class="glyphicon-ok glyphicon"></span>
                    <% else %>
                        <span class="glyphicon-off glyphicon"></span>
                    <% end %>
                </td>


                <td><%= link_to '', edit_user_path(user), {:class => 'btn glyphicon glyphicon-edit btn-primary  btn-sm '} %>
                    <!--%= link_to '', user, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn glyphicon glyphicon-remove btn-danger  btn-sm' %--></td>
            </tr>
        <% rescue %>
            <tr>
                <td><%= user.id %></td>
            </tr>
        <% end %>
    <% end %>
    </tbody>
</table>
<%= paginate @users %>
<br>

<script type="text/javascript">
    $('#users').addClass('active');
</script>
