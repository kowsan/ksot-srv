<div class="row">
    <div class="col-lg-4">
        <%= form_for(@control_list_quarter_factor) do |f| %>
            <% if @control_list_quarter_factor.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@control_list_quarter_factor.errors.count, "error") %> prohibited this
                        control_list_quarter_factor from being saved:</h2>

                    <ul>
                        <% @control_list_quarter_factor.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>


            <div class="form-group">
                <%= f.label 'Порядок' %><br>
                <%= f.number_field :order_num,:class=>' form-control input' %>
            </div>
            <div class="form-group">
                <%= f.label 'Наименование' %><br>
                <%= f.text_field :factor,:class=>' form-control input' %>
            </div>
            <div class="form-group">
                <%= f.label 'Активен' %><br>
                <%= f.check_box :is_active,:class=>' checkbox' %>
            </div>
            <div class="form-group">
                <%= f.label 'Группа факторов' %><br>
                <%= f.collection_select(:control_list_quarter_factor_group_id, ControlListQuarterFactorGroup.all, :id, :name,{},:class=>' form-control input') %>
            </div>
            <div class="form-group">
                <%= f.label 'Примечание' %><br>
                <%= f.text_field :comment,:class=>' form-control input' %>
            </div>
            <div class="form-group">
                <%= f.submit(:class=>'btn btn-primary') %>
            </div>
        <% end %>

    </div>
</div>