<p id="notice"><%= notice %></p>
<h4 style="color: orange">Список подразделений</h4>

<%= link_to 'Новое подразделение', new_subdivision_path, :class => 'btn btn-success btn-sm' %>
<br>
<br>


<table class="table">

    <th>Имя</th>
    <th>Короткое имя</th>
    <th>Участок</th>
    <th colspan="2">Действия</th>
    <% @subdivisions.each do |subdivision| %>
        <tr>
            <td><%= subdivision.name %></td>
            <td><%= subdivision.short_name %></td>
            <td><%= subdivision.area.name %></td>
            <td><%= link_to '', edit_subdivision_path(subdivision), :class => 'btn glyphicon glyphicon-edit btn-primary  btn-sm' %>
                <%= link_to '', subdivision, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn glyphicon glyphicon-remove btn-danger  btn-sm' %></td>
        </tr>
    <% end %>

</table>

<br>
<script type="text/javascript">
    $('#subdivisions').addClass('active');
</script>

