<p id="notice"><%= notice %></p>
<h1>Список подразделений</h1>

<%= link_to 'Новое подразделение', new_subdivision_path, :class => 'btn btn-success btn-sm' %>
<br>
<br>


<table class="table">

    <th>Имя</th>
    <th>Короткое имя</th>
    <th>Участок</th>
    <th colspan="2">Действия</th>
    <% @subdivisions.each do |subdivision| %>
        <tr>
            <td><%= subdivision.name %></td>
            <td><%= subdivision.short_name %></td>
            <td><%= subdivision.area.name %></td>
            <td><%= link_to 'Редактировать', edit_subdivision_path(subdivision), :class => 'btn btn-info btn-sm' %>
                <%= link_to 'Удалить', subdivision, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-danger btn-sm' %></td>
        </tr>
    <% end %>

</table>

<br>
<script type="text/javascript">
    $('#subdivisions').addClass('active');
</script>

