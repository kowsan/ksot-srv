<%= form_for(@control_list_factor_group) do |f| %>
    <% if @control_list_factor_group.errors.any? %>
        <div id="" class="alert alert-danger">

            <ul>
                <% @control_list_factor_group.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label 'Порядок сортировки' %><br>
        <%= f.number_field :order_num, :class =>'form-control input' %>
    </div>
    <div class="form-group">
        <%= f.label 'Наименование' %><br>
        <%= f.text_field :name, :class => 'form-control input' %>
    </div>
    <div class="form-group">
        <%= f.submit %>
    </div>
<% end %>
