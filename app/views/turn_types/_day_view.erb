<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped">
            <th>Рабочее место</th>
            <th>Первая смена</th>
            <th>Вторая смена</th>
            <% @workspaces.all.each do |w| %>
                <% name, fs, ls= TurnType.turn_times(w.id) %>
                <tr>
                    <td><%= name %></td>
                    <td>
                        <% if fs<=0 %>
                            Завершена
                        <% else %>
                            <%= TurnType.humanize(fs) %><br>
                            <a href="#" data-name="<%= name %>" data-number="1" class="btn btn-xs btn-primary">Закрыть</a>
                        <% end %>

                    </td>
                    <td>
                        <% if ls<=0 %>
                            Завершена
                        <% else %>
                            <%= TurnType.humanize(ls) %><br>
                            <a href="#" data-name="<%= name %>" data-number="2" class="btn btn-xs btn-primary">Закрыть</a>
                        <% end %>

                    </td>
                </tr>
            <% end %>
        </table>
    </div>
</div>