<p id="notice"><%= notice %></p>

<h1>Виды смен</h1>

<table class="table table-striped table-hover">

      <th>Name</th>
      <th>First start at</th>
      <th>First duration</th>
      <th>Second start at</th>
      <th>Second duration</th>
      <th>Reminder before end</th>
      <th>Is day off</th>
      <th colspan="3"></th>


  <tbody>
    <% @turn_types.each do |turn_type| %>
      <tr>
        <td><%= turn_type.name %></td>
        <td><%= turn_type.first_start_at %></td>
        <td><%= turn_type.first_duration %></td>
        <td><%= turn_type.second_start_at %></td>
        <td><%= turn_type.second_duration %></td>
        <td><%= turn_type.reminder_before_end %></td>
        <td><%= turn_type.is_day_off %></td>
        <td><%= link_to 'Show', turn_type %></td>
        <td><%= link_to 'Edit', edit_turn_type_path(turn_type) %></td>
        <td><%= link_to 'Destroy', turn_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

