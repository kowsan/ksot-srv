<%= render :partial => 'control_list_factors/menu'%>
<p id="notice"><%= notice %></p>

<h1>Факторы</h1>

<table class="table table-hover table-striped">

      <th>Порядок</th>
      <th>Фактор</th>
    <th>Группа</th>
      <th>Активен</th>
      <th>Примечание</th>
      <th colspan="3"></th>


  <tbody>
    <% @control_list_factors.each do |control_list_factor| %>
      <tr>
        <td><%= control_list_factor.order_num %></td>
        <td><%= control_list_factor.factor %></td>
          <td><%= control_list_factor.control_list_factor_group.name %></td>
        <td><%= control_list_factor.is_active %></td>
        <td><%= control_list_factor.comment %></td>

        <td><%= link_to 'Edit', edit_control_list_factor_path(control_list_factor) %><!--<%= link_to 'Destroy', control_list_factor, method: :delete, data: { confirm: 'Are you sure?' } %>--></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Control list factor', new_control_list_factor_path %>
<script type="text/javascript">
    $('#factors').addClass('active')
</script>
