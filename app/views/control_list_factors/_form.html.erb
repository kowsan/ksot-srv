<%= form_for(@control_list_factor) do |f| %>
    <% if @control_list_factor.errors.any? %>
       <div id="" class="alert alert-danger">


            <ul class="has-error">
                <% @control_list_factor.errors.full_messages.each do |message| %>
                    <li ><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label 'Порядок' %><br>
        <%= f.number_field :order_num,:class=>' form-control input' %>
    </div>
    <div class="form-group">
        <%= f.label 'Наименование' %><br>
        <%= f.text_field :factor,:class=>' form-control input' %>
    </div>
    <div class="form-group">
        <%= f.label 'Активен' %><br>
        <%= f.check_box :is_active,:class=>' checkbox' %>
    </div>
    <div class="form-group">
        <%= f.label 'Группа факторов' %><br>
        <%= f.collection_select(:control_list_factor_group_id, ControlListFactorGroup.all, :id, :name,{},:class=>' form-control input') %>
    </div>
    <div class="form-group">
        <%= f.label 'Примечание' %><br>
        <%= f.text_field :comment,:class=>' form-control input' %>
    </div>
    <div class="form-group">
        <%= f.submit(:class=>'btn btn-primary') %>
    </div>
<% end %>
