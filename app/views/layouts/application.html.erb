<!DOCTYPE html>
<html>
<head>
    <title>КСОТ</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>


</head>
<body>
<div style="margin-left: 10px">
    <% unless @logged_user.nil? %>

        <ul class="nav nav-tabs" id="myTab">


            <% if @can_manage_org_structure %>
                <li id="workspaces"><%= link_to 'Рабочие места', work_spaces_path %></li>
                <li id="users"><%= link_to 'Пользователи', users_path %></li>
                <li id="managements"><%= link_to 'Дирекции', managements_path %></li>
                <li id="areas"><%= link_to 'Участки', areas_path %></li>
                <li id="subdivisions"><%= link_to 'Подразделения', subdivisions_path %></li>
                <li id="issuetypes"><%= link_to 'Виды нарушений', issue_types_path %></li>
                <li id="autoworkspaces"><%= link_to 'АРМ', auto_work_spaces_path %></li>
            <% end %>
            <% if @can_add_issue %>
                <li id="issues"><%= link_to 'Нарушения', issues_path %>
            <% end %>




            <li class="pull-right"><%= link_to 'Выйти', destroy_user_session_path, :method => :get, :class => 'btn btn-sm btn-danger' %></li>

            <li class="pull-right">
                <a style="background-color: #ffffff; color: #ffffff; border: 0; margin-top: 1px;">Здравствуйте, <%= @logged_user.full_name %></a>
            </li>

        </ul>

    <% end %>


    <%= yield %>
</div>
</body>
</html>
