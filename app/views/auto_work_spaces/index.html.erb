<% unless notice.nil? %>
    <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>
<h1>Список АРМ</h1>

<p>Не распределенные</p>
<%= render :partial => 'auto_work_spaces/ajax_unassigned' %>



<p>Привязанные</p>
<table class="table table-striped table-hover">

    <th>ID</th>
    <th>UUID</th>
    <th>имя ПК</th>
    <th>Краткое имя</th>
    <th>ОС</th>
    <th>Пользователь ОС</th>
    <th>Комментарий</th>
    <th>Расположение</th>
    <th>Анонимный режим</th>
    <th>Привязано к</th>
    <th>Действия</th>

    <tbody>
    <% @auto_work_spaces.each do |auto_work_space| %>

        <tr>
            <td><%= auto_work_space.id %></td>
            <td><%= auto_work_space.uuid %></td>
            <td><%= auto_work_space.computername %></td>
            <td><%= auto_work_space.short_name %></td>
            <td><%= auto_work_space.os %></td>
            <td><%= auto_work_space.os_user %></td>
            <td><%= auto_work_space.comment %></td>
            <td><%= auto_work_space.location %></td>
            <!--<td><%= auto_work_space.is_used? %></td>-->
            <td>
                <% if auto_work_space.allow_anonymous? %>
                    <span class="icon-ok"></span>
                <% else %>
                    <span class="icon-off"></span>
                <% end %>
            </td>
            <td>
                <% if auto_work_space.work_space.nil? %>
                    Не привязано
                <% else %>
                    <%= link_to auto_work_space.work_space.name, edit_work_space_path(auto_work_space.work_space_id) %>
                <% end %>
            </td>

            <td><%= link_to 'Редактировать', edit_auto_work_space_path(auto_work_space), {:class => 'btn btn-info btn-sm'} %>
                <%= link_to 'Удалить', auto_work_space, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-danger btn-sm' %></td>
        </tr>
    <% end %>

    </tbody>
</table>

<br>

<script type="text/javascript">
    $('#autoworkspaces').addClass('active');
</script>
