<%= render :partial => 'control_list_factors/menu' %>
<%= link_to 'Добавить', new_control_list_month_path, :class => 'btn btn-sm btn-success' %>
<br><br>
<h1>Контрольные листы</h1>

<table class="table table-hover table-striped">

    <th>Код</th>
    <th>Дата составления</th>
    <th>Проверяющий</th>
    <th>Должность</th>
    <th>Подразделение</th>
    <th>Участок</th>
    <th>Действия</th>
    <% @control_list_months.each do |control_list_month| %>
        <tr>
            <td><%= control_list_month.id %></td>
            <td><%= control_list_month.form_date.strftime("%d.%m.%Y") %></td>
            <td><%= control_list_month.author.full_name %></td>
            <td><%= control_list_month.author.position %></td>
            <td><%= control_list_month.subdivision.name %></td>
            <td><%= control_list_month.subdivision.area.name %></td>

            <td>
                <%= link_to '', edit_control_list_month_path(control_list_month), :class => 'glyphicon btn btn-sm btn-primary glyphicon-edit' %>
                <% if @can_manage_org_structure %>
                    <%= link_to '', control_list_month, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'glyphicon btn btn-sm btn-danger glyphicon-remove' %>
                <% end %>
            </td>
        </tr>
    <% end %>

</table>

<br>
<script type="text/javascript">
    $('#clmonth').addClass('active')
</script>


