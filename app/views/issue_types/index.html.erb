<p id="notice"><%= notice %></p>

<h4 style="color: orange">Виды нарушений</h4>
<%= link_to 'Новый вид нарушения', new_issue_type_path,:class => 'btn btn-success btn-sm' %>
<br>
<br>
<table class="table table-striped table-hover">
    <th>Наименование</th>
    <th>Критичность</th>
    <th>Действия</th>

    <tbody>
    <% @issue_types.each do |issue_type| %>
        <tr>
            <td><%= issue_type.name %></td>
            <td><%= issue_type.critical_type.name %></td>
            <td><%= link_to '', edit_issue_type_path(issue_type), :class => 'btn glyphicon glyphicon-edit btn-primary  btn-sm' %>
                <%= link_to '', issue_type, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn glyphicon glyphicon-remove btn-danger  btn-sm' %></td>
        </tr>
    <% end %>
    </tbody>
</table>
<script type="text/javascript">
    $('#issuetypes').addClass('active');
</script>


