<% unless notice.nil? %>
    <p id="notice" class="alert-success alert"><%= notice %></p>
<% end %>
<%= render :partial => 'turn_types/turns_menu' %>
<h1>Схемы смен</h1>
<%= link_to 'Новая схема смен', new_turn_scheme_path,:class => 'btn  btn-success  btn-sm' %>
<br><br>
<table class="table table-hover table-striped">

    <th>ID</th>
    <th>Имя</th>
    <th>Тип смены</th>
    <th>Комментарий</th>


    <th colspan="3"></th>



    <% @turn_schemes.each do |turn_scheme| %>
        <tr>
            <td><%= turn_scheme.id %></td>
            <td><%= turn_scheme.name %></td>

            <td><%= turn_scheme.turn_type.name %></td>
            <td><%= turn_scheme.comment %></td>
            <td><%= link_to '', edit_turn_scheme_path(turn_scheme), {:class => 'btn glyphicon glyphicon-edit btn-primary  btn-sm '} %>

            </td>
        </tr>
    <% end %>

</table>

<br>


<script type="text/javascript">
    $('#turnschemes').addClass('active')
</script>
