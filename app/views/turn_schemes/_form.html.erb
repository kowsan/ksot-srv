<%= form_for(@turn_scheme) do |f| %>
    <% if @turn_scheme.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@turn_scheme.errors.count, "error") %> prohibited this turn_scheme from being saved:</h2>

            <ul>
                <% @turn_scheme.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="container-fluid">
        <div class="form-group">
            <%= f.label 'Имя' %>
            <%= f.text_field(:name, {:class => 'form-control', :placeholder => 'имя '}) %>
        </div>
        <div class="form-group">
            <%= f.label 'Комментарий' %>
            <%= f.text_field(:comment, {:class => 'form-control', :placeholder => 'Комментарий'}) %>
        </div>

        <div class="form-group">
            <%= f.label 'Вид смены(Тип добавляемых дней)' %>
            <%= f.collection_select(:turn_type_id, TurnType.all, :id, :name, {}, {:class => ' form-control input-large'}) %>
        </div>

        <div class="row">
            <h5 class="alert-danger">Дни исключения из схемы(будет применен указанный вид схемы)</h5>
        </div>
        <div class="row" id="addday">

        </div>
        <div class="row">
            <input type="button" class="btn btn-info btn-sm" value="Добавить день" id="addbtn">
        </div>

        <br><br>

        <div class="actions">
            <%= f.submit({:class => 'btn btn-primary btn-lg'}) %>
        </div>

        <textarea cols="50" rows="20" id="dte"></textarea>
    </div>





<% end %>
<script type="text/javascript">


    $(document).ready(function () {

        $('#dte').datepick({
            multiSelect: 999,
            multiSeparator: '\n',
            monthsToShow: [4, 3]


        })
        $('#addbtn').click(function () {
            //add new day template
            var content = ''
            content += '<div class="row"><br>\n\n    <div class="col-sm-3">\n        <input type="text" class="form-control  date" name="day[]">\n    </div>\n    <div class="col-sm-5">\n        <select name="turn_type_id[]" class="form-control input">\n        </select>\n    </div>\n    <div class="col-sm-1"><a href="#" class="btn btn-danger"\n                             onclick="$(event.target).parent().parent().remove();return false;">Удалить</a></div>\n</div>\n\n'
            $('#addday').append(content)
            $('.date').datetimepicker({
                locale: 'ru',
                showTodayButton: true,
                format: 'DD.MM.YYYY'

            });
            $('select[name="turn_type_id[]"]').each(function () {
                if ($(this).find('option').length == 0) {
                    $('#turn_scheme_turn_type_id').find('option').clone().appendTo($(this));
                }
            })
        })

    })
</script>