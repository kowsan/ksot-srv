<%= form_for(@turn_scheme) do |f| %>
    <% if @turn_scheme.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@turn_scheme.errors.count, "error") %> prohibited this turn_scheme from being saved:</h2>

            <ul>
                <% @turn_scheme.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>


    <div class="form-group">
        <%= f.label 'Имя' %>
        <%= f.text_field(:name, {:class => 'form-control', :placeholder => 'имя '}) %>
    </div>
    <div class="form-group">
        <%= f.label 'Комментарий' %>
        <%= f.text_field(:comment, {:class => 'form-control', :placeholder => 'Комментарий'}) %>
    </div>

    <div class="form-group">
        <%= f.label 'Вид смены(Тип добавляемых дней)' %>
        <%= f.collection_select(:turn_type_id, TurnType.all, :id, :name, {}, {:class => ' form-control input-large'}) %>
    </div>

    <div class="row">
        <h3 class="alert-warning col-md-5">Дни исключения из схемы(будет применен указанный вид схемы)</h3>
    </div>
    <div class="row" id="addday">

    </div>
     <div class="row">
         <input type="button" class="btn btn-info btn-sm" value="Добавить день" id="addbtn">
     </div>





    <div class="actions">
        <%= f.submit({:class => 'btn btn-primary btn-lg'}) %>
    </div>

<% end %>
   <script type="text/javascript">


       $(document).ready(function(){
             $('#addbtn').click(function(){

                 //add new day template
                 var content=''

                 content+='<div class="row">\n    <div class="col-md-1">\n        <input type="text" class="form-control  date" name="day[]">\n    </div>\n    <div class="col-md-5">\n        <select name="turn_type_id[]" class="form-control input">\n            <option>1</option>\n        </select>\n    </div>\n</div>\n'
                 $('#addday').append(content)
                 $('.col-md-1 .date').datetimepicker({
                     locale: 'ru',
                     showTodayButton: true,
                     format: 'DD.MM.YYYY'

                 });
             })

       })
   </script>