<%= render :partial => 'work/menu' %>

<% WorkSpace.unscoped.all.each_with_index do |item, index| %>

    <% if index.even? %>

        <div class="row">
            <div class="col-lg-5">
                <h4><%= item.name %></h4>
                <%= render :partial => 'work/krest_view', :locals => {:@works_id => item.id} %>
            </div>
    <% else %>
        <div class="col-lg-5">
            <h4><%= item.name %></h4>
            <%= render :partial => 'work/krest_view', :locals => {:@works_id => item.id} %>
        </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <hr>
            </div>
        </div>
    <% end %>
<% end %>